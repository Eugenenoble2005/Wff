<Window
    x:Class="Wff.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:Wff.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Wff.ViewModels"
    Title="Wff"
    Width="400"
    Height="450"
    d:DesignHeight="450"
    d:DesignWidth="400"
    x:DataType="vm:MainWindowViewModel"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">
    <Window.Styles>
        <Style Selector="Window">
            <Setter Property="Background" Value="#040216" />
        </Style>
    </Window.Styles>
    <Window.Resources>
        <converter:StringEqualConverter x:Key="StringEqual" />
        <converter:StringNotEqualConverter x:Key="StringNotEqual" />
        <converter:RegionContentConverter x:Key="RegionContentConverter" />
    </Window.Resources>
    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.fs)
        -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Margin="5">
            <TextBlock
                Grid.Column="0"
                HorizontalAlignment="Center"
                FontSize="25"
                FontWeight="Bold"
                Text="Wff Screen Recorder" />

            <StackPanel Margin="25">
                <StackPanel.Styles>
                    <Style Selector="ComboBox,Button,Expander,NumericUpDown">
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="Margin" Value="0,5,0,0" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="2" />
                        <Setter Property="CornerRadius" Value="5" />
                        <Setter Property="Padding" Value="15" />
                    </Style>
                    <Style Selector="TextBlock.seperator">
                        <Setter Property="Margin" Value="0,20,0,0" />
                    </Style>
                </StackPanel.Styles>
                <TextBlock Text="Video Settings" />
                <Grid ColumnDefinitions="*,*">
                    <Button
                        Classes.accent="{Binding Region, Converter={StaticResource StringEqual}, ConverterParameter='Screen'}"
                        Command="{Binding TrySelectScreenRegionCommand}"
                        Content="Screen" />
                    <Button
                        Grid.Column="1"
                        Classes.accent="{Binding Region, Converter={StaticResource StringNotEqual}, ConverterParameter='Screen'}"
                        Command="{Binding TrySlurpSelectRegionCommand}">
                        <Button.Content>
                            <!--  Don't even need a multibinding here  -->
                            <MultiBinding Converter="{StaticResource RegionContentConverter}">
                                <Binding Path="Region" />
                                <Binding
                                    Converter="{StaticResource StringNotEqual}"
                                    ConverterParameter="Screen"
                                    Path="Region" />
                            </MultiBinding>
                        </Button.Content>
                    </Button>
                </Grid>
                <ComboBox ItemsSource="{Binding Outputs}" SelectedIndex="0" />
                <TextBlock Classes="seperator" Text="Recording Settings" />
                <ComboBox
                    ItemsSource="{Binding AudioDevices}"
                    SelectedIndex="0"
                    SelectedItem="{Binding AudioDevice}" />
                <Button Command="{Binding SelectFile}" Content="{Binding Filename}" />
                <Expander>
                    <Expander.Header>
                        Advanced Options
                    </Expander.Header>
                </Expander>
                <StackPanel>
                    <TextBlock>Delay</TextBlock>
                    <NumericUpDown
                        Maximum="30"
                        Minimum="0"
                        FormatString="0"
                        Increment="1"
                        Value="{Binding Delay}" />
                </StackPanel>
                <Grid Grid.Row="1">
                    <StackPanel IsVisible="{Binding IsRecording}" Orientation="Vertical">
                        <Button Command="{Binding TryStopRecordingCommand}" Content="Stop Recording" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            Text="{Binding RecordingDuration}"
                            TextAlignment="Center" />
                    </StackPanel>
                    <Button
                        Command="{Binding TryStartRecordingCommand}"
                        Content="Start Recording"
                        IsVisible="{Binding !IsRecording}" />
                </Grid>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
